<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xmlns:tc='http://www.ehcache.org/v3/clustered'
    xsi:schemaLocation="
        http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
        http://www.ehcache.org/v3/clustered http://www.ehcache.org/schema/ehcache-clustered-ext-3.0.xsd">

  <service>
    <tc:cluster>
      <tc:connection url="terracotta://tsa:9510/myCacheManager"/>
      <tc:server-side-config auto-create="true">
        <tc:default-resource from="OFFHEAP_RESOURCE_NAME"/>
      </tc:server-side-config>
    </tc:cluster>
  </service>

  <cache alias="vets" uses-template="clustered">
  </cache>

  <cache-template name="clustered">
    <resources>
      <heap unit="MB">10</heap>
      <tc:clustered-dedicated unit="MB">50</tc:clustered-dedicated>
    </resources>
    <tc:clustered-store consistency="strong"/>
  </cache-template>
</config>